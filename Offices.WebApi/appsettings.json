{
  "OfficesDatabaseSettings": {
    "OfficeCollectionName": "Offices",
    "PhotoCollectionName": "Photos",
    "ConnectionString": "mongodb://clinic-offices-mongo:27017",
    //"ConnectionString": "mongodb://localhost:27017",
    "OfficeDatabaseName": "OfficesDb"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/webapi-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp: yyyy-MM-dd HH:mm:ss.fff zzz} {CorellationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
